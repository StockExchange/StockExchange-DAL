public SqlConnection getConnection()
        {
            SqlConnection con = new SqlConnection("Data Source=JOHANNES-PC;Database=StockExchange;Integrated Security=true");
            con.Open();
            return con;
        }
        
        public SqlDataReader getStudentsOnCourse(String course)
        {
            String sqlString = "select * "
            + "from student "
            + "INNER JOIN studies " 
            + "ON student.spnr=studies.spnr "
            + "where ccode = '"+course+"'";

            SqlConnection con = getConnection();

            SqlCommand cmd = new SqlCommand(sqlString, con);
            SqlDataReader reader = cmd.ExecuteReader();

            return reader;
        }
        
        
