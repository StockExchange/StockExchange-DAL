using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace StockExchange
{
    class DAL
    {
        StockExchangeEntities SEE = new StockExchangeEntities();

        public void SetAdmin(String AdminId, String PWord, String Name)
        {
            Administrator Admin = new Administrator();

            Admin.adminId = AdminId;
            Admin.name = PWord;
            Admin.pWord = Name;

            try
            {
                SEE.Administrator.Add(Admin);
                SEE.SaveChanges();

            }
            catch (Exception)
            {



            }

        }
        public Administrator GetAdmin(String AdminId)
        {
            try
            {
                Administrator admin = SEE.Administrator.Find(AdminId);
                return admin;
            }
            catch (Exception)
            {
                return null;
            }

        }
        public Administrator GetAdminPassWordCheck(String UserId, String PassWord)
        {

            try
            {
                Administrator admin = SEE.Administrator.Find(UserId);
                if (admin.pWord == PassWord)
                {
                    return admin;
                }
            }
            catch (Exception)
            {

                return null;
            }
            return null;

        }

        public void SetStock(String SName, String SInfo, Double CurrentValue, String OrgNr)
        {

            Stock Stock = new Stock();

            Stock.sName = SName;
            Stock.sInfo = SInfo;
            Stock.currentValue = CurrentValue;
            Stock.orgNr = OrgNr;

            try
            {
                SEE.Stock.Add(Stock);
                SEE.SaveChanges();
            }
            catch (Exception)
            {


            }
        }

        public Stock GetStock(String SName)
        {

            try
            {
                Stock Stock = SEE.Stock.Find(SName);

                return Stock;
            }
            catch (Exception)
            {

                return null;

            }

        }

        public void SetStockPortfolio(String UserId, String SName, Double Value, int Amount)
        {
            Stockportfolio StockPort = new Stockportfolio();

            StockPort.userId = UserId;
            StockPort.sName = SName;
            StockPort.value = Value;
            StockPort.amount = Amount;

            try
            {
                SEE.Stockportfolio.Add(StockPort);
                SEE.SaveChanges();
            }
            catch (Exception)
            {


            }


        }

        public Stockportfolio GetStockPortfolio(String UserId, String SName)
        {
            try
            {
                Stockportfolio Stockport = SEE.Stockportfolio.Find(UserId, SName);

                return Stockport;
            }
            catch (Exception)
            {

                return null;
            }
        }
        public void SetStockValue(String SName, String Date, Double Value, String OrgNr)
        {
            Stockvalue StockVal = new Stockvalue();

            StockVal.sName = SName;
            StockVal.date = Date;
            StockVal.value = Value;
            StockVal.orgNr = OrgNr;

            try
            {
                SEE.Stockvalue.Add(StockVal);
                SEE.SaveChanges();
            }
            catch (Exception)
            {


            }
        }

        public Stockvalue GetStockValue(String SName, String Date)
        {
            try
            {
                Stockvalue Stockvalue = SEE.Stockvalue.Find(SName, Date);

                return Stockvalue;
            }
            catch (Exception)
            {

                return null;
            }
        }
        public void SetUsers(String UserId, String PWord, String FName, String LName, String Adress, String NINr, Double Account)
        {
            Users User = new Users();

            User.userId = UserId;
            User.pWord = PWord;
            User.fName = FName;
            User.lName = LName;
            User.adress = Adress;
            User.niNr = NINr;
            User.account = Account;


            try
            {
                SEE.Users.Add(User);
                SEE.SaveChanges();
            }
            catch (Exception)
            {


            }


        }
        public Users GetUser(String UserId)
        {
            try
            {
                Users User = SEE.Users.Find(UserId);
                return User;
            }
            catch (Exception)
            {

                return null;
            }


        }

        public Users GetUserPassWordCheck(String UserId, String PassWord)
        {

            try
            {
                Users user = SEE.Users.Find(UserId);
                if (user.pWord == PassWord)
                {
                    return user;
                }
            }
            catch (Exception)
            {

                return null;
            }
            return null;
        }

        public Users UpdateUsers(String UserId, String FName, String LName, String Adress, String NINr)
        {
            Users tmpUser = SEE.Users.Find(UserId);

            tmpUser.fName = FName;
            tmpUser.lName = LName;
            tmpUser.adress = Adress;
            tmpUser.niNr = NINr;




            try
            {
                SEE.SaveChanges();
                return tmpUser;
            }
            catch (Exception)
            {

                return null;
            }

        }

    }
}






    }
